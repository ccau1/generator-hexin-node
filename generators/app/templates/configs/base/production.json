{
	"title": "<%= name %>",
	"baseUrl": "/api",
	"port": <%= port %>,
	"debug": true,
  "secret": "1232412421412",
  "host": "http://localhost",
	"mail": {
		"service": "<%= mailerService || '' %>",
		"auth": {
			"user": "<%= mailerAuthUser || '' %>",
			"pass": "<%= mailerAuthPass || '' %>"
		}
	},
	"redis": {
		"host": "<%= redisHost || '' %>",
		"port": "<%= redisPort || '' %>"
	},
	"fivebeans": {
		"host": "<%= fivebeansHost || '' %>",
		"port": "<%= fivebeansPort || '' %>"
	},
	"db": {
		<% if (db === 'mongo') { %>
		"mongo-db": {
			"engine": "mongo",
			"connection": {
				"hosts": ["localhost:27017"],
				"database": "<%= name %>"
			},
			"default": true
    }
		<% } else if (db === 'mysql') { %>
		"mysql-db": {
			"engine": "sequelize",
			"connection": {
				"user": "root",
				"pass": "root",
				"database": "<%= name %>",
				"configs": {
					"host": "localhost",
					"port": "3306",
					"dialect": "mysql",
					"dialectOptions": {
						"connectTimeout": 10000
					},
					"pool": {
						"min": 1,
						"max": 5,
						"idle": 10000
					}
				}
			}
    }
		<% } %>
	}
}
