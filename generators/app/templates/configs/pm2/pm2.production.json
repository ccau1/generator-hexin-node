{
	"apps": [
		{
			"name": "<%= name %>-api",
			"cwd" : "/home/deploy/<%= name %>/<%= name %>-api",
			"script": "server.js",
			"instances": 1,
      "exec_interpreter": "/root/.nvm/versions/node/v8.1.2/bin/node",
			"exec_mode": "fork",
			"env": {
				"NODE_ENV": "production",
				"PORT": "8281"
			},
      "error_file": "/root/api/<%= name %>-api/pm2/pm2.log",
      "out_file": "/root/api/<%= name %>-api/pm2/pm2.log"
		}
	]
}
